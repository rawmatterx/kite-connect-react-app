# Kite Connect API Credentials
# Get these from https://kite.trade/console
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here

# Redirect URI for OAuth flow
# This should match the redirect URI registered in your Kite Console
KITE_REDIRECT_URI=https://your-domain.com/api/kite-redirect

# Session secret for Express session middleware
SESSION_SECRET=your_session_secret_here

# EdgeDB connection (if using)
EDGEDB_DSN=your_edgedb_dsn_here

# For local development, you might want to use:
# KITE_REDIRECT_URI=http://localhost:3000/api/kite-redirect
